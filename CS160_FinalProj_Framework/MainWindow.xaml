<Window x:Class="CS160_FinalProj_Framework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kinterbook" Height="840" Width="1300" xmlns:my="clr-namespace:Microsoft.Samples.Kinect.WpfViewers;assembly=Microsoft.Samples.Kinect.WpfViewers" Loaded="Window_Loaded" Closing="Window_Closing">
    <Canvas Height="800" Name="MainWindowCanvas" Width="1280">
        <!-- [WL] Frame from which we can navigate through pages, to avoid NavigationWindow restrictions. -->
        <Frame Canvas.Left="0" Canvas.Top="0" Height="800" Name="MainFrame" Width="1280" Source="HomePage.xaml" Navigated="MainFrame_Navigated" />
        
        <!-- [WL] Kinect Sensor Chooser. -->
        <my:KinectSensorChooser Canvas.Left="500" Canvas.Top="525" Name="KinectSensorChooser" Width="700" KinectSensorChanged="KinectSensorChooser_KinectSensorChanged" />
        
        <!-- [WL] Custom Kinect cursor. Starts off-screen by default. NOTE: Need to change Fill to custom cursor image! -->
        <Ellipse Canvas.Left="-50" Canvas.Top="-50" Height="50" Width="50" Name="KinectCursor" Stroke="{x:Null}" Fill="BlueViolet" />
    </Canvas>
</Window>
